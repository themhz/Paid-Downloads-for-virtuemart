        <version>1.0</version>
        <description>Simple free Plugin to enable payed downloads for virtuemart.</description>
	<scriptfile>payeddownloadsInstallerScript.php</scriptfile>	
        <files>
		<filename plugin="payeddownloads">payeddownloads.php</filename>
                <filename plugin="payeddownloads">index.html</filename>
		<folder plugin="payeddownloads">components</folder>
		<folder plugin="payeddownloads">administrator</folder>
		<folder plugin="payeddownloads">media</folder>
		<folder plugin="payeddownloads">sql</folder>
        </files>	      	    
	<install>
		<sql>
		    <file driver="mysql" charset="utf8">sql/install_data.sql</file>
		</sql>
    	</install>
	<uninstall >
		<sql>
		    <file driver="mysql" charset="utf8">sql/uninstall_data.sql</file>
		</sql>
	</uninstall>
</extension>
